{
  "name": "@kiyasov/platform-hono",
  "version": "2.0.1",
  "description": "Nest adapter for Hono",
  "author": "Islam Kiiasov",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiyasov/platform-hono"
  },
  "license": "MIT",
  "keywords": [
    "nestjs",
    "nest",
    "hono",
    "adapter",
    "platform",
    "http",
    "web",
    "framework",
    "server",
    "rest",
    "api",
    "typescript",
    "graphql"
  ],
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./adapters": {
      "require": "./dist/esm/src/adapters/index.js",
      "import": "./dist/esm/src/adapters/index.js"
    },
    "./interfaces": {
      "require": "./dist/esm/src/interfaces/index.js",
      "import": "./dist/esm/src/interfaces/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@hono/node-server": "^1.19.8",
    "@nestjs/graphql": "^13.2.3",
    "@nestjs/apollo": "^13.2.3",
    "hono": "^4.11.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/common": "^11.1.11",
    "@nestjs/core": "^11.1.11",
    "@nestjs/swagger": "^11.2.4",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.8",
    "@types/autocannon": "^7.12.7",
    "@types/bun": "^1.3.5",
    "autocannon": "^8.0.0",
    "bun": "^1.3.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-perfectionist": "^5.3.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^17.0.0",
    "graphql": "^16.12.0",
    "graphql-subscriptions": "^3.0.0",
    "prettier": "^3.7.4",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.1.2",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.5",
    "tsc": "^2.0.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "undici": "^7.18.2"
  },
  "scripts": {
    "build:esm": "bun ./node_modules/typescript/bin/tsc --p tsconfig.esm.json",
    "build:cjs": "bun ./node_modules/typescript/bin/tsc --p tsconfig.cjs.json",
    "build": "bun run build:esm && bun run build:cjs",
    "dev": "cd example && nest start -w --copy-files --exec \"bun run --inspect\"",
    "benchmark": "bun dev:bun & ( sleep 5 && autocannon -c 200 -d 5 -p 10 http://localhost:3000 )",
    "benchmark:file": "bun run dev:bun & ( sleep 5 && bun run ./benchmarks/benchmark.mjs)",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "trustedDependencies": [
    "@apollo/protobufjs",
    "@nestjs/core",
    "@swc/core",
    "bun"
  ]
}
